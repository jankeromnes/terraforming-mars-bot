      "lib": ["dom", "es2019"],
      "outDir": "./built",
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "incremental": true
